{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "declaration": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}